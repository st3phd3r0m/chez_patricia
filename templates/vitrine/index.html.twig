{% extends 'base.html.twig' %}

{% block title %}Hello VitrineController!
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('categoriesList') }}
{% endblock %}

{% block body %}

	<header id="categoriesList">
		<b-navbar toggleable="lg" type="dark" variant="info" class="p-2">
			<b-navbar-brand href="#" class="w-50">NavBar</b-navbar-brand>

            <b-navbar-toggle target="nav-collapse"></b-navbar-toggle>

            <b-collapse id="nav-collapse" is-nav>
                <categories-list :categories="categories"></categories-list>

                <!-- Right aligned nav items -->
                <b-navbar-nav>
                    <b-nav-form>
                        <div class="d-flex">
                            <b-form-input size="sm" placeholder="Search"></b-form-input>
                            <b-button size="sm" type="submit">Search</b-button>                    
                        </div>
                    </b-nav-form>

                    <b-nav-item-dropdown>
                        <!-- Using 'button-content' slot -->
                        <template #button-content>
                            User
                        </template>
                        <b-dropdown-item href="#">Profile</b-dropdown-item>
                        <b-dropdown-item href="#">Sign Out</b-dropdown-item>
                    </b-nav-item-dropdown>
                </b-navbar-nav>
            </b-collapse>
		</b-navbar>
	</header>

{% endblock %}


{% block javascripts %}
	{{ encore_entry_script_tags('categoriesList') }}
{% endblock %}
